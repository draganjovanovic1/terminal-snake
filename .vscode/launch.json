{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/bin/Debug/netcoreapp1.1/terminal-snake.dll",
            "args": [ "src/" ],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "externalConsole": true
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}